<div>
  <h1>トップページ</h1>
</div>
<% if flash[:alert] %>
  <div class="alert alert-danger" style="color: red;">
    <%= flash[:alert] %>
  </div>
<% end %>
<p style="color: green"><%= notice %></p>
<% if user_signed_in? %>
<div>
  <div>
    <p>ユーザー登録済みの方</p>
    <%= link_to "ユーザー詳細ページ", user_path(current_user), data: {turbo: false} %>
  </div>
  <div>
    <h2>各種サービス一覧</h2>
    <div>
      <%= link_to "リカレントLMSへ", "https://wiki.koumi-test.com/", target: "_blank", rel: "noopener noreferrer" %>
    </div>
    <div>
      <%= link_to "リカレントWikiへ", "https://wiki.koumi-test.com/", target: "_blank", rel: "noopener noreferrer" %>
    </div>
  </div>
</div>
<% end %>
