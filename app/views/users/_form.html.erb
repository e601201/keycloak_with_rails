<%= form_with(model: user) do |form| %>
  <% if user.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
        <% user.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <% if request.path == new_user_path %>
    <div>
      <%= form.label "ユーザーネーム(必須)", style: "display: block" %>
      <%= form.text_field :user_name, required: true %>
    </div>
  <% else %>
    <div>
      <%= form.label "ユーザーネーム", style: "display: block" %>
      <%= user.user_name %>
    </div>
  <% end %>

  <div>
    <%= form.label "名", style: "display: block" %>
    <%= form.text_field :first_name %>
  </div>

  <div>
    <%= form.label "姓", style: "display: block" %>
    <%= form.text_field :last_name %>
  </div>

  <% if request.path == new_user_path %>
    <div>
      <%= form.label "メールアドレス(必須)", style: "display: block" %>
      <%= form.text_field :email, required: true %>
    </div>
    <div>
      <%= form.label "パスワード(必須)", style: "display: block" %>
      <%= form.password_field :password, required: true %>
    </div>

    <div>
      <%= form.label "パスワード確認(必須)", style: "display: block" %>
      <%= form.password_field :password_confirmation, required: true %>
    </div>
  <% else %>
    <div>
      <%= form.label "メールアドレス(必須)", style: "display: block" %>
      <%= user.email %>
    </div>
  <% end %>
  <div>
    <%= form.submit "作成" %>
  </div>
<% end %>
